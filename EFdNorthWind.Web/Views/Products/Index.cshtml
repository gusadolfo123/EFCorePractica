@model IEnumerable<EFdNorthWind.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Productos</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>@ViewBag.Message</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="form-group">
    <a asp-action="Create" class="btn btn-primary">Crear</a>
</div>

<div class="row">

    <div class="col-md-6">
        <form action="/Products/Index" method="get">
            <div class="form-group d-flex">
                <label class="control-label mr-2">Categorias</label>
                <select asp-items="ViewBag.Categories" id="CategoryID" name="CategoryID" class="form-control w-50 mr-2"></select>
                <button type="submit" class="btn btn-primary mr-2">Buscar</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <form asp-action="Delete">
                        <input type="hidden" name="id" value="@item.ProductID" />
                        @Html.ActionLink("Editar", "Edit", new { id = item.ProductID }, new { @class = "btn btn-sm btn-success" })
                        @Html.ActionLink("Detalle", "Details", new { id = item.ProductID }, new { @class = "btn btn-sm btn-info" })
                        <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                        <input type="checkbox" name="WithLog" id="WithLog" class="form-check d-inline" />Con Log
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>

</script>
